@model KudumbashreeManagementSystem.Models.Member

@{
    ViewData["Title"] = "Edit";
}

<h2 class="mb-3">Edit Member</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MemberId" />
            <div class="card mb-3">
                <div class="card-header">General</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">Personal Details</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="JoinDate" class="form-label"></label>
                            <input asp-for="JoinDate" class="form-control" type="date" />
                            <span asp-validation-for="JoinDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateOfBirth" class="form-label"></label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EducationStatus" class="form-label"></label>
                            <input asp-for="EducationStatus" class="form-control" />
                            <span asp-validation-for="EducationStatus" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Occupation" class="form-label"></label>
                            <input asp-for="Occupation" class="form-control" />
                            <span asp-validation-for="Occupation" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">Economic Details</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FamilySize" class="form-label"></label>
                            <input asp-for="FamilySize" class="form-control" type="number" min="1" />
                            <span asp-validation-for="FamilySize" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EconomicStatus" class="form-label"></label>
                            <select asp-for="EconomicStatus" class="form-control">
                                <option value="">--Select Economic Status--</option>
                                <option>APL</option>
                                <option>BPL</option>
                            </select>
                            <span asp-validation-for="EconomicStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">ID Proof</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="IdentityType" class="form-label"></label>
                            <select asp-for="IdentityType" class="form-control">
                                <option value="">-- Select Identity Type --</option>
                                <option>Ration Card</option>
                                <option>Voter ID</option>
                                <option>Job Card</option>
                                <option>Other</option>
                            </select>
                            <span asp-validation-for="IdentityType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="IdentityNumber" class="form-label"></label>
                            <input asp-for="IdentityNumber" class="form-control" />
                            <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Index" class="btn btn-secondary">Go Back</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
