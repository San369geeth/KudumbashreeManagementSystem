@model IEnumerable<KudumbashreeManagementSystem.Models.Member>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning me-1" asp-route-id="@item.MemberId">Edit</a> 
                <a asp-action="Details" class="btn btn-info me-1" asp-route-id="@item.MemberId">Details</a> 
                <button type="button"
                        class="btn btn-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#deleteModal"
                        data-id="@item.MemberId"
                        data-name="@item.Name"
                        data-phone="@item.Phone"
                        data-address="@item.Address"
                        data-joindate="@item.JoinDate.ToString("dd-MM-yyyy")">
                    Delete
                </button>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Delete confirmation modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Member</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this member?</p>
        <dl class="row">
          <dt class="col-sm-3">Name</dt>
          <dd class="col-sm-9"><span id="modal-member-name"></span></dd>

          <dt class="col-sm-3">Phone</dt>
          <dd class="col-sm-9"><span id="modal-member-phone"></span></dd>

          <dt class="col-sm-3">Address</dt>
          <dd class="col-sm-9"><span id="modal-member-address"></span></dd>

          <dt class="col-sm-3">Join Date</dt>
          <dd class="col-sm-9"><span id="modal-member-joindate"></span></dd>
        </dl>
      </div>
      <div class="modal-footer">
        <form asp-action="Delete" method="post" id="delete-form" class="m-0">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="delete-member-id" value="" />
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget; // Button that triggered the modal
                var id = button.getAttribute('data-id');
                var name = button.getAttribute('data-name');
                var phone = button.getAttribute('data-phone');
                var address = button.getAttribute('data-address');
                var joindate = button.getAttribute('data-joindate');

                document.getElementById('modal-member-name').textContent = name || '';
                document.getElementById('modal-member-phone').textContent = phone || '';
                document.getElementById('modal-member-address').textContent = address || '';
                document.getElementById('modal-member-joindate').textContent = joindate || '';
                document.getElementById('delete-member-id').value = id || '';
            });
        }
    </script>
}
